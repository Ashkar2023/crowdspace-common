{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "isolatedModules": true,
        "rootDir": "./src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@interfaces/*":["src/interfaces/*"],
            "@lib/*":["src/lib/*"],
            "@util/*":["src/util/*"],
            "@constants/*":["src/constants/*"],
        }
    },
    "tsc-alias":{
        "verbose":"false",
        "resolveFullPaths":true,

    },
    "include": ["src", "src/lib/.validator.ts"],
    "exclude": ["node_modules"]
}