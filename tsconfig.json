{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "isolatedModules": true,
        "rootDir": "./src",
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "@interfaces/*":["src/interfaces/*"],
            "@core/*":["src/core/*"],
            "@util/*":["src/util/*"],
            "~types/*":["src/types/*"],
            "@constants/*":["src/constants/*"],
            "@config/*":["src/config/*"],
        },
        "resolveJsonModule": true
    },
    "tsc-alias":{
        "verbose":"false",
        "resolveFullPaths":true,
    },
    "include": ["src", "src/core/.validator.ts"],
    "exclude": ["node_modules"]
}